{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
        }
    },
    "globals": {
        "React": "readonly",
        "ServiceWorkerGlobalScope": "readonly"
    },
    "rules": {
        "linebreak-style": 0,
        "no-unused-vars": 0,
        "object-curly-newline": 0,
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            160
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        ],
        "react/react-in-jsx-scope": 0,
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "prefer-destructuring": 0,
        "no-shadow": 0,
        "no-param-reassign": 0,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "no-use-before-define": 0,
        "@typescript-eslint/no-use-before-define": [
            "error",
            {
                "variables": false,
                "functions": false, 
                "classes": false
            }
        ],
        "react/prop-types": 0,
        "no-underscore-dangle": 0,
        "nonblock-statement-body-position": 0,
        "curly": 0,
        "no-nested-ternary": 0,
        "jsx-a11y/control-has-associated-label": 0,
        "react/no-array-index-key": 0,
        "consistent-return": 0,
        "react/default-props-match-prop-types": 0
    }
}